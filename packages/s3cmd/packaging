set -e

mkdir -p ${BOSH_INSTALL_TARGET}/bin
cd ${BOSH_INSTALL_TARGET}
tar xvf ${BOSH_COMPILE_TARGET}/s3cmd-2.0.2.tar.gz

echo "#!/bin/bash" > ${BOSH_INSTALL_TARGET}/bin/s3cmd
echo "source /var/vcap/packages/python-2.7/bosh/runtime.env" >> ${BOSH_INSTALL_TARGET}/bin/s3cmd
echo 'python /var/vcap/packages/python-2.7/bin/s3cmd $@' >> ${BOSH_INSTALL_TARGET}/bin/s3cmd

chmod +x ${BOSH_INSTALL_TARGET}/bin/s3cmd

